<import src="../movie/movie-template.wxml" />
<!--pages/movies/movie-list/movie-list-template.wxml-->
<template name="moveListTemplate">
  <view class='movie-list-container'>
    <view class='inner-container'>
      <view class='movie-head'>
        <text class='slogan'>正在热播</text>
        <view class='more'>
          <text class='more-text'>更多</text>
          <image src="/images/icon/arrow-right.png" class='more-img'></image>
        </view>
      </view>
      <view class='movies-container'>
        <block wx:for="{{movies}}" wx:for-item="movie" wx:key="key" >
          <template is="movieTemplate" data="{{...movie}}"/>
        </block>

      </view>

    </view>
  </view>
</template>